<div class="donations-list col-md-12">
  <div class="row">
    <h3 class="col-sm-10">Match Donation</h3>
  </div>

  <div class="row">
  	<%= simple_form_for @donation do |f| %>
	  	<div class="col-xs-10 form-match">
	  		<%= f.association :recipient,
                  collection: Organization.all,
                  include_blank: true,
                  label: false,
                  input_html: { class: 'chosen-select' }	
				%>		
	  		<%= f.button :submit, "Match Donation", class: 'btn btn-success' %>
			</div>
	  	<div class="col-xs-2">
	  		<%= link_to icon('arrow-left')+" Back", :back, class: 'btn btn-secondary'  %>
	  	</div>
  	<% end %>

	<%= render @donation %>

</div>

