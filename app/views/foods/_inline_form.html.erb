<% if @donation.on_hold? %>
	<div class="col-md-12">
		<%= simple_form_for [@donation, @food],wrapper: :inline_form,
	  html: { class: 'form-inline' } do |f| %>
		  <%= f.hidden_field :donation, value: @donation.id %>
		  <%= f.input :name, placeholder: "Food Description", class: "col-xs-5" %>
		  <%= f.input :food_type, as: :select, collection: Food::FOOD_TYPES,inline_label: 'Remember me', class:"col-xs-3" %></%>
		  <%= f.input :qty, placeholder: "Quantity", class: "col-xs-1" %>
		  <%= f.button :submit, " Add Food", class:"btn btn-primary " %>
	<% end %>
	</div>
<% elsif @donation.confirmed? %>
	<div class="col-md-12 text-center">
		Your donation is confirmed! 
	</div>
<% else %>
	<div class="col-md-12 text-center">
		Your donation was canceled! 
	</div>
<% end %>
